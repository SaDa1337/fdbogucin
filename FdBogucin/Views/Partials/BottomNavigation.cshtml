@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    var home = @CurrentPage.Site();
    var logo = Umbraco.Media(home.siteLogo);
}
<!-- footer start (Add "dark" class to #footer in order to enable dark footer) -->
<!-- ================ -->
<footer id="footer" class="clearfix">

    <!-- .footer start -->
    <!-- ================ -->
    <div class="footer">
        <div class="container">
            <div class="footer-inner">
                <div class="row">
                    <div class="col-md-6 col-md-offset-3">
                        <div class="footer-content text-center padding-ver-clear">
                            <div class="logo-footer">
                                <img id="logo-footer" class="center-block" src="@logo.umbracoFile" alt="@logo.GetFieldValue("alt")" title="@logo.GetFieldValue("title")" />
                            </div>
                            <p>@home.GetPropertyValue("footer")</p>
                            <ul class="list-inline mb-20">
                                <li><i class="text-default fa fa-map-marker pr-5"></i>@home.GetPropertyValue("address")</li>
                                <li><a href="tel:+00 1234567890" class="link-dark"><i class="text-default fa fa-phone pl-10 pr-5"></i>@home.GetPropertyValue("telefon")</a></li>
                                <li><a href="@home.GetPropertyValue("email")" class="link-dark"><i class="text-default fa fa-envelope-o pl-10 pr-5"></i>@home.GetPropertyValue("email")</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- .footer end -->

</footer>
<!-- footer end -->