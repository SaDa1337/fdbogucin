
@inherits UmbracoViewPage<Lecoati.LeBlender.Extension.Models.LeBlenderModel>

@{
    Layout = "";
}

@if (Model.Items.Any())
{
    foreach (var item in Model.Items)
    {
        <div class="col-sm-4">
            <div class="image-box style-2 mb-20">
                <div class="overlay-container overlay-visible">
                    @if (item.GetValue<string>("contentItem") != null)
                    {
                        <a href="@(item.GetValue("contentItem") != null ? Umbraco.TypedContent(item.GetValue<string>("contentItem")).Url : "#")">
                            <img src="@Umbraco.TypedMedia(item.GetValue<string>("image")).Url" alt="@item.GetValue("alt")" title="@item.GetValue("imageTitle")">
                        </a>
                    }
                    else
                    {
                        <img src="@Umbraco.TypedMedia(item.GetValue<string>("image")).Url" alt="@item.GetValue("alt")" title="@item.GetValue("imageTitle")">
                    }
                    <div class="overlay-bottom hidden-xs">
                        <div class="text">
                            <p class="lead margin-clear text-left">@item.GetValue("title")</p>
                        </div>
                    </div>
                </div>
                <div class="body padding-horizontal-clear">
                    <p>@item.GetValue("description")</p>
                    @if (item.GetValue<string>("contentItem") != null)
                    {
                        <a class="link-dark" href="@(item.GetValue("contentItem") != null ? Umbraco.TypedContent(item.GetValue<string>("contentItem")).Url : "#")">Czytaj dalej<i class="pl-5 fa fa-angle-double-right"></i></a>
                    }
                </div>
            </div>
        </div>
    }
}